@model List<Book>
@{
    ViewData["Title"] = "Catalog";
}

<div class="catalog-block">
    <h1>Catalog</h1>

    <form method="get" asp-controller="Catalog" asp-action="Index" class="search-form">
        <div class="search-input">
            <input type="text" id="searchBox" name="searchString" placeholder="Search by name" value="@Context.Request.Query["searchString"]" />
            <button type="submit" class="search-button" aria-label="Search">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <div class="book-list">
        @foreach (var book in Model)
        {
            <a href="/Catalog/Info/@book.Id" class="book-card-link">
                <div class="book-card">
                    <div class="book-image-container">
                        <img src="@book.Image" alt="@book.Name" />  
                        <div class="book-mark">@book.Mark</div>
                    </div>
                    <h2>@book.Name</h2>
                    <p><strong>Автор:</strong> @book.Author</p>
                </div>
            </a>
        }
    </div>
</div>
